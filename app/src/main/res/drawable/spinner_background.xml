<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
        <shape android:shape="rectangle">
                <corners android:radius="15dp"/>
                <stroke android:width="2.3dp"
                    android:color="#BEBEBE"/>
        </shape>
</item>
<item android:gravity="center_vertical|right"
    android:left="38dp"
    android:right="10dp">
        <layer-list>
                <item  android:gravity="right" android:width="7dp" android:height="6dp" >
                        <bitmap android:src="@drawable/triangle_down" android:tint="#BEBEBE"/>
                </item>
        </layer-list>
</item>
</layer-list>