<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfDiagnosisActivity"
    android:background="@color/purple1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.widget.Button
            android:id="@+id/back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="자가진단 결과는 의사의 진단을 대체할 수
            없으니  유의하여 주시기 바랍니다."
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="정확한 진단은 가까운 병원을 방문하시길
             권장드립니다."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/one_line_pointgray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/diagnosisBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_write_bg_gray"
                android:elevation="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="고려대학교 안암병원"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&lt;과잉행동장애 자가 진단표&gt; 바로가기"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/dark_purple"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/diagnosisBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="20dp"
                android:background="@drawable/login_write_bg_gray"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보건복지부 국립춘천병원"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="&lt;ADHD 자가진단&gt; 바로가기"
                    android:textColor="@color/dark_purple"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    app:layout_goneMarginTop="10dp"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/diagnosisBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_write_bg_gray"
                android:elevation="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강남구 정신건강 복지센터"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="&lt;주의력결핍 과잉행동장애 (ADHD) 자가진단&gt;"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/dark_purple"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>