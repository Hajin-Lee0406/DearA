<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boardLineS1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EAEAEA"
            app:layout_constraintBottom_toTopOf="@+id/boardTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="title"
            android:paddingStart="16dp"
            android:paddingEnd="70dp"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boardLineS1" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_radius_board"
            android:text="1"
            android:textColor="@color/purple2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boardLineS1" />

        <LinearLayout
            android:id="@+id/boardTimeWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boardTitle">

            <TextView
                android:id="@+id/boardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boardTime"
                android:layout_marginRight="10dp"
                android:textColor="#747474"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/boardWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boardWriter"
                android:textColor="#747474"
                android:textSize="10sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boardLineE1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:background="#EAEAEA"
            app:layout_constraintTop_toBottomOf="@+id/boardTimeWriter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>