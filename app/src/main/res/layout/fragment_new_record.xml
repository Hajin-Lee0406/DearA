<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewRecordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/purple_box"
                    android:layout_width="420dp"
                    android:layout_height="160dp"
                    android:background="@drawable/purple_box" />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@null"
                    android:hint="병원 이름을 입력해주세요"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/month" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/month" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/hour" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="285dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/hour" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="처방받은 약"
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#808080"/>

                <ImageButton
                    android:id="@+id/plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/plus_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="150dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageButton
                    android:layout_width="420dp"
                    android:layout_height="100dp"
                    android:background="@drawable/write_box1" />

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@null"
                    android:hint="약 이름"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="18dp"
                    android:hint="  ex. 1일 3회"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="진료"
                    android:textColor="#808080"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/record_start"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/record_start"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="420dp"
                    android:layout_height="150dp"
                    android:background="@drawable/write_box2" />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@null"
                    android:hint="메모는 여기에 입력해주세요."
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="420dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/write_box3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="180dp"
                    android:background="@null"
                    android:hint="1. 빨간 동그라미를 누르면 녹음이 시작됩니다.\n2.빨간 네모를 누르면 녹음이 즉시 중단되고 자동 저장됩니다."
                    android:textColor="#D3D3D3"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="최근 증상"
                android:textColor="#808080"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="420dp"
                    android:layout_height="150dp"
                    android:background="@drawable/write_box4" />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="-"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>