<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewRecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#f9f9f9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:text="삭제"
            android:textColor="#808080"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:src="@drawable/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="병원 일정"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="세브란스 병원"
                    android:maxLength="31"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintStart_toStartOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:maxLength="31"
                    android:maxLines="1"
                    android:text="2022. 9. 15"
                    android:textColor="#A0A0A0"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintStart_toStartOf="@+id/list"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:maxLength="31"
                    android:maxLines="1"
                    android:text="오후 13:00"
                    android:textColor="#A0A0A0"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintStart_toEndOf="@+id/date"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="43dp"
                    android:text="날짜"
                    android:backgroundTint="#DBDFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="43dp"
                    android:text="시간"
                    android:backgroundTint="#DBDFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="처방받은 약"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/plus_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/plus_button"
                    app:layout_constraintStart_toEndOf="@+id/textView25"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:text="도모틴캡슐"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/list2"
                    app:layout_constraintTop_toTopOf="@+id/list2" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:text="아침/저녁 식후 30분"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/title2"
                    app:layout_constraintTop_toTopOf="@+id/list2" />

                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/record_delete"
                    app:layout_constraintEnd_toEndOf="@+id/list2"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/list7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/list2" />

                <EditText
                    android:id="@+id/title6"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="약 이름"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/list7"
                    app:layout_constraintTop_toTopOf="@+id/list7" />

                <EditText
                    android:id="@+id/title7"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="권장 복용량"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/title6"
                    app:layout_constraintTop_toTopOf="@+id/list7" />


                <ListView
                    android:id="@+id/record_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:text="진료"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_start"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/microphone"
                    app:layout_constraintStart_toEndOf="@+id/textView24"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_stop"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/no_recording"
                    app:layout_constraintStart_toEndOf="@+id/record_start"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_play"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/play_button"
                    app:layout_constraintStart_toEndOf="@+id/record_stop"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="녹음시에는 의사 선생님의\n동의를 잊지 마세요 !"
                    android:textColor="#FF0000"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@+id/record_play"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list4"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="물 많이 마시기\n집중할 수 있는 거리 찾기(흥미찾기)\n스트레스 피하기\n"
                    android:ellipsize="none"
                    android:maxLines="4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@+id/list4"
                    app:layout_constraintStart_toStartOf="@+id/list4"
                    app:layout_constraintTop_toTopOf="@+id/list4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:text="최근 증상"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list6"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="집중이 더 어려워짐\n정리정돈이 귀찮고 힘이 듦\n툭하면 물건을 잃어버림\n"
                    android:ellipsize="none"
                    android:maxLines="4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@+id/list6"
                    app:layout_constraintStart_toStartOf="@+id/list6"
                    app:layout_constraintTop_toTopOf="@+id/list6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>