<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".diary.DatePickerFragment"
    android:background="@drawable/background_radius_white">

    <ImageView
        android:id="@+id/dateCloseBtn"
        android:layout_width="12dp"
        android:layout_height="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yearChange1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yearChange2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--달력-->
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/month1"
                    android:text="1월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month2"
                    android:text="2월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month3"
                    android:text="3월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month4"
                    android:text="4월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/month5"
                    android:text="5월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month6"
                    android:text="6월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month7"
                    android:text="7월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month8"
                    android:text="8월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/month9"
                    android:text="9월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month10"
                    android:text="10월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month11"
                    android:background="#00ff0000"
                    android:text="11월"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/month12"
                    android:text="12월"
                    android:background="#00ff0000"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:textColor="#6A6A6A"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>