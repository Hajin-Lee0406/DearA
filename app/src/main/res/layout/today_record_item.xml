<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_yellow">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tdRecordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="오늘 일정 없음"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tdRecordDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="2022. 11. 27"
                    android:textColor="#A0A0A0"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tdRecordTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="오전 11:10"
                    android:textColor="#A0A0A0"
                    android:textSize="15dp"/>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/tdDetailBtn"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/click_arrow"
            android:layout_gravity="center"/>



    </LinearLayout>

</LinearLayout>