<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record.AddRecordActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#f9f9f9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="저장"
            android:textColor="#808080"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="병원 일정"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/hospitalName"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:hint="병원 이름을 작성해주세요"
                    android:maxLength="31"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintStart_toStartOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/time"
                    app:layout_constraintTop_toBottomOf="@+id/hospitalName" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/dateBtn"
                    app:layout_constraintTop_toBottomOf="@+id/hospitalName" />

                <Button
                    android:id="@+id/dateBtn"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="80dp"
                    android:backgroundTint="#DBDFFF"
                    android:text="날짜"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

                <Button
                    android:id="@+id/timeBtn"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="43dp"
                    android:text="시간"
                    android:backgroundTint="#DBDFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="@+id/list"
                    app:layout_constraintTop_toTopOf="@+id/list" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="처방받은 약"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/plus_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/plus_button"
                    app:layout_constraintStart_toEndOf="@+id/textView25"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list2"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/pillName"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="약 이름을 작성"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/list2"
                    app:layout_constraintTop_toTopOf="@+id/list2" />

                <EditText
                    android:id="@+id/dosage"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="권장 복용량 작성"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pillName"
                    app:layout_constraintTop_toTopOf="@+id/list2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pillRecord"
                    android:layout_width="395dp"
                    android:layout_height="73dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </androidx.recyclerview.widget.RecyclerView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:text="진료"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_start"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/microphone"
                    app:layout_constraintStart_toEndOf="@+id/textView24"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_stop"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/no_recording"
                    app:layout_constraintStart_toEndOf="@+id/record_start"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/record_play"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/play_button"
                    app:layout_constraintStart_toEndOf="@+id/record_stop"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="녹음시에는 의사 선생님의\n동의를 잊지 마세요 !"
                    android:textColor="#FF0000"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@+id/record_play"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list4"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo"
                    android:layout_width="340dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:hint="메모는 여기에 작성해주세요\n\n\n"
                    android:ellipsize="none"
                    android:maxLines="4"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@+id/list4"
                    app:layout_constraintStart_toStartOf="@+id/list4"
                    app:layout_constraintTop_toTopOf="@+id/list4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:text="최근 증상"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/list6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/background_radius_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/symptom"
                    android:layout_width="340dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="- 최근 증상을 작성해주세요\n-\n-\n"
                    android:maxLines="4"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/list6"
                    app:layout_constraintEnd_toEndOf="@+id/list6"
                    app:layout_constraintStart_toStartOf="@+id/list6"
                    app:layout_constraintTop_toTopOf="@+id/list6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>